{% if content %}
	<div {{region_attributes.teaser_latest_right_image.addClass('featured-single-cardi')}}>

		{% if content.teaser_latest_right_image  %}

			<div {{region_attributes.teaser_latest_right_image.addClass('img-handler')}}>
				{{ content.teaser_latest_right_image }}
			</div>
		{% endif %}
		{% if content.teaser_latest_right_date %}

			<div {{region_attributes.teaser_latest_right_date.addClass('pub-info')}}>
				{{ content.teaser_latest_right_date }}
			</div>
		{% endif %}
		{% if content.teaser_latest_right_text %}

			<div {{region_attributes.teaser_latest_right_text.addClass('card-text-descriptor')}}>
				{{ content.teaser_latest_right_text }}
			</div>
		{% endif %}
		{% if content.teaser_latest_right_author %}
			<div {{region_attributes.teaser_latest_right_author.addClass('role')}}>
				{{ content.teaser_latest_right_author }}
			</div>
		{% endif %}
	</div>
{% endif %}
