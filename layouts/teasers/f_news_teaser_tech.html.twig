{% if content %}
<section {{ attributes.addClass('tech-stories-section-handler') }} >
    <div class="container">
        <div class="stories-handler row gap-4">
            <div class="single-story col-lg-4 col-md-5 ">
                {% if content %}
                <div {{ region_attributes.teaser_tech_date.addClass('created-date')}} >
                    {{ content.teaser_tech_date }}                    
                </div>
                {% endif %}
                <div class="story-title">
                {% if content %}
                    {{ content.teaser_tech_title }}
                {% endif %}
                </div>
                <div class="story">
                    {% if content %}
                        {{ content.teaser_tech_text }}
                    {% endif %}
                    <div class="pub-info d-flex">
                        {% if content %}
                        <div {{ region_attributes.teaser_tech_image.addClass('img-profile')}} >
                            {{ content.teaser_tech_image }}                            
                        </div>
                        {% endif %}
                        {% if content %}
                        <div {{ region_attributes.teaser_tech_role.addClass('role')}} >
                            {{ content.teaser_tech_role }}                            
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}