{% if content %}
<section {{ attributes.addClass('leader-mansory-handler')}}>
    <div class="single-mansory-card">
        {% if content.mansory_teaser_image %}
        <div {{ region_attributes.mansory_teaser_image.addClass(['img-link'])}}>
            {{ content.mansory_teaser_image }}
        </div>
        {% endif %}
        <div class="smc-body">
            <div class="member-name">
                {% if content.mansory_teaser_name %}
                <h3 {{ region_attributes.mansory_teaser_name.addClass(['name'])}}>
                    {{ content.mansory_teaser_name }}
                </h3>
                {% endif %}
            </div>
            {% if content.mansory_teaser_role %}
            <div {{ region_attributes.mansory_teaser_role.addClass(['member-role'])}}>
                {{ content.mansory_teaser_role }}
            </div>
            {% endif %}
        </div>
    </div>
</section>
{% endif %}