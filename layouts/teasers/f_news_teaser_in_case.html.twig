{% if content %}
    <div class="bloc-img ">
        {% if content %}
            {{ content.teaser_in_case_image }}
        {% endif %}
        <div class="bloc-img__body d-flex flex-column">
            {% if content %}
            <a {{ region_attributes.teaser_in_case_text.addClass('bib-title') }}>
                {{ content.teaser_in_case_text }}
            </a>
            {% endif %}
            {% if content %}
            <span {{ region_attributes.teaser_in_case_date.addClass('bib-date') }}>
                {{ content.teaser_in_case_date }}
            </span>
            {% endif %}
        </div>
        {% if content %}
        <div {{ region_attributes.teaser_in_case_author.addClass('bib-creator') }}>
            {{ content.teaser_in_case_author }}
        </div>
        {% endif %}
    </div>
{% endif %}