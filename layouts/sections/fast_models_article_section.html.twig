{% if content %}
<div {{ attributes.addClass('container')}}>

    {% if content.article_image %}
    <div class="col-lg-12 col-md-12">
        {{ content.article_image }}
    </div>
    {% endif %}

    {% if content.article_text %}
    <div class="col-lg-12 col-md-12">
        {{ content.article_text }}
    </div>
    {% endif %}

    {% if content.article_video %}
    <div class="col-lg-12 col-md-12">
        {{ content.article_video }}
    </div>
    {% endif %}

</div>
{% endif %}